<%= form_for @cluster_assign do |f| %>

  <div class="form-group">
    <%= f.text_field :day, placeholder: "Please select some dates for pairs.", size: 50, id: "form-2" %>
  </div>

  <div class="actions">
    <%= f.submit "Submit", id: "assign-matches", class: "btn btn-primary" %>
  </div>
<% end %>


<script>
  $(function() {

    $('#form-2').multiDatesPicker({
      dateFormat: 'dd-mm-yy'
    });



    });
</script>
