<button type="button" class="btn btn-default clickadyclick">Show dates</button>
<%= link_to 'Admin panel', users_index_path, class: 'btn btn-default text-right' %>
<br>
<br>
<div id="new-pair-form" style="display:none;">
  <%= render 'clusters/form' %>
</div>
<br>
<div class="panel panel-primary">
  <div class="panel-heading">
    <h3>Pairs for today</h3>
  </div>

  <div class="panel-body">
    <table class="table table-striped">
      <% if @cluster.nil? %>
        <%= 'No pairs assigned for today' %>
      <% else %>
        <% @cluster.pairs.each do |pair| %>
          <% users = pair.users.to_a %>
          <tr>
            <td><%= users[0].email %></td>
            <td><%= users[1].email %></td>
          </tr>
        <% end %>
      <% end %>
    </table>
  </div>
</div>
